<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <TextView
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="160dp"
        android:layout_width="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="155dp"
        android:background="#FA1C0C"/>

    <SeekBar
        android:id="@+id/main_seekBar_huou"
        android:layout_width="650dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:max="10000"
        android:progressBackgroundTint="#00FFFFFF"
        android:progressTint="#00FFFFFF"
        android:thumb="@drawable/drawable_huou_dung_im"
        app:layout_constraintBottom_toBottomOf="@id/main_checkBox_huu"
        app:layout_constraintStart_toEndOf="@id/main_checkBox_huu"
        app:layout_constraintTop_toTopOf="@id/main_checkBox_huu" />

    <SeekBar
        android:id="@+id/main_seekBar_heo"
        android:layout_width="650dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:max="10000"
        android:progressBackgroundTint="#00FFFFFF"
        android:progressTint="#00FFFFFF"
        android:thumb="@drawable/drawable_heo_dung_im"
        app:layout_constraintBottom_toBottomOf="@id/main_checkBox_heo"
        app:layout_constraintStart_toEndOf="@id/main_checkBox_heo"
        app:layout_constraintTop_toTopOf="@id/main_checkBox_heo" />

    <SeekBar
        android:id="@+id/main_seekBar_cho"
        android:layout_width="650dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:max="10000"
        android:progressBackgroundTint="#00FFFFFF"
        android:progressTint="#00FFFFFF"
        android:thumb="@drawable/drawable_cho_dung_im"
        app:layout_constraintBottom_toBottomOf="@id/main_checkBox_cho"
        app:layout_constraintStart_toEndOf="@id/main_checkBox_cho"
        app:layout_constraintTop_toTopOf="@id/main_checkBox_cho" />

    <TextView
        android:id="@+id/main_textViewBackGround"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E60B0A0A" />

    <CheckBox
        android:id="@+id/main_checkBox_huu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginBottom="100dp"
        android:buttonTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/main_checkBox_heo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="8dp"
        android:buttonTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/main_checkBox_cho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="115dp"
        android:buttonTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/main_logo"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/main_buttonPlay"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/button_play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>